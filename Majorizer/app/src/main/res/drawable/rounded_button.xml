<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="20dp" />
            <gradient android:angle="180" android:startColor="@color/colorAccentFade" android:endColor="@color/colorAccentFade" />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="20dp" />
            <gradient android:angle="180" android:startColor="@color/colorAccent" android:endColor="@color/colorAccentEnd" />
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="20dp" />
            <gradient android:angle="180" android:startColor="@color/colorAccent" android:endColor="@color/colorAccentEnd" />
        </shape>
    </item>
</selector>