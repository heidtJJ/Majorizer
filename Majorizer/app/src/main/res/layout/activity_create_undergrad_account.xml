<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Admin.CreateUndergradAccountActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="4dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Create a Undergrad Student Account"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="23sp"
                android:textStyle="bold" />

            <include
                layout="@layout/starter_create_account"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" />

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="8dp"
                android:layout_marginRight="12dp"
                android:columnCount="2"
                android:orientation="horizontal"
                android:rowCount="1">

                <TextView
                    android:layout_height="match_parent"
                    android:layout_row="0"
                    android:layout_column="0"
                    android:paddingRight="10dp"
                    android:text="Major 1"
                    android:textAlignment="center"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <RadioGroup xmlns:android="http://schemas.android.com/apk/res/android"
                    android:id="@+id/accountMajor1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <RadioButton
                        android:id="@+id/radioMajor1_CS"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/ComputerScience" />

                    <RadioButton
                        android:id="@+id/radioMajor1_math"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/Mathematics" />
                </RadioGroup>

            </GridLayout>


            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="8dp"
                android:layout_marginRight="12dp"
                android:columnCount="2"
                android:orientation="horizontal"
                android:rowCount="1">

                <TextView
                    android:layout_height="match_parent"
                    android:layout_row="0"
                    android:layout_column="0"
                    android:paddingRight="10dp"
                    android:text="Major 2"
                    android:textAlignment="center"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <RadioGroup xmlns:android="http://schemas.android.com/apk/res/android"
                    android:id="@+id/accountMajor2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <RadioButton
                        android:id="@+id/radioMajor2_CS"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/ComputerScience" />

                    <RadioButton
                        android:id="@+id/radioMajor2_math"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/Mathematics" />

                    <RadioButton
                        android:id="@+id/radioMajor2_none"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="No Second Major" />
                </RadioGroup>

            </GridLayout>

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="8dp"
                android:layout_marginRight="12dp"
                android:columnCount="2"
                android:orientation="horizontal"
                android:rowCount="1">

                <TextView
                    android:layout_height="match_parent"
                    android:layout_row="0"
                    android:layout_column="0"
                    android:paddingRight="10dp"
                    android:text="Minor 1"
                    android:textAlignment="center"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <RadioGroup xmlns:android="http://schemas.android.com/apk/res/android"
                    android:id="@+id/accountMinor1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <RadioButton
                        android:id="@+id/radioMinor1_PH"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/Physics" />

                    <RadioButton
                        android:id="@+id/radioMinor1_math"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/Mathematics" />

                    <RadioButton
                        android:id="@+id/radioMinor1_none"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="No Minor" />


                </RadioGroup>

            </GridLayout>


            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="8dp"
                android:layout_marginRight="12dp"
                android:columnCount="2"
                android:orientation="horizontal"
                android:rowCount="1">

                <TextView
                    android:layout_height="match_parent"
                    android:layout_row="0"
                    android:layout_column="0"
                    android:paddingRight="10dp"
                    android:text="Minor 2"
                    android:textAlignment="center"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <RadioGroup xmlns:android="http://schemas.android.com/apk/res/android"
                    android:id="@+id/accountMinor2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <RadioButton
                        android:id="@+id/radioMinor2_PH"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/Physics" />

                    <RadioButton
                        android:id="@+id/radioMinor2_math"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/Mathematics" />

                    <RadioButton
                        android:id="@+id/radioMinor2_none"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="No Second Minor" />
                </RadioGroup>

            </GridLayout>


            <Button
                android:id="@+id/CreateAccountButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="5dp"
                android:onClick="createNewUndergradAccount"
                android:text="@string/CreateAccount"
                android:textAlignment="center"
                android:textSize="20sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent" />

        </LinearLayout>

    </ScrollView>

</android.support.constraint.ConstraintLayout>