<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/classNameView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Software Design and Development"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/classGradeLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="Grade:"
        android:textSize="15sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/classNameView" />

    <TextView
        android:id="@+id/classGradeView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:text="A+"
        android:textSize="15sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/classGradeLabel"
        app:layout_constraintStart_toEndOf="@+id/classGradeLabel" />

    <TextView
        android:id="@+id/classCreditsLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="Credits:"
        android:textSize="15sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/classGradeView"
        app:layout_constraintStart_toEndOf="@+id/classGradeView" />

    <TextView
        android:id="@+id/classCreditView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:text="3"
        app:layout_constraintBaseline_toBaselineOf="@+id/classCreditsLabel"
        app:layout_constraintStart_toEndOf="@+id/classCreditsLabel" />
</android.support.constraint.ConstraintLayout>
