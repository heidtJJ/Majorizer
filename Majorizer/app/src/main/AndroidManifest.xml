<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.teamrocket.majorizer">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".LoginActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar"
            android:windowSoftInputMode="stateVisible|adjustPan|stateHidden" />
        <activity android:name=".Admin.SelectAccountTypeActivity" />
        <activity android:name=".Admin.CreateStudentAccountActivity" />
        <activity android:name=".Admin.CreateAdvisorAccountActivity" />
        <activity android:name=".Admin.CreateUndergradActivity" />
        <activity android:name=".Admin.CreateGradAccountActivity" />
        <activity
            android:name=".Admin.UnlockAccountActivity"
            android:windowSoftInputMode="stateAlwaysHidden" />
        <activity android:name=".Student.UndergradTile1Activity" />
        <activity android:name=".Student.UndergradTile2Activity"></activity>
    </application>

</manifest>